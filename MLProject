  main:
    parameters:
      remote_server_uri: {type: str, default: https://user-mbenxsalha-207868.user.lab.sspcloud.fr/}
      mlflow_experiment_name: {type: str, default: Default}
      mlflow_run_name: {type: str, default: default}
